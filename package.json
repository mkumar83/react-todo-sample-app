        "prettier": "prettier src cypress --check",
        "lint-staged": "lint-staged --config lint-staged.js",
        "report": "open '/Users/mchinnu/workspaces/react-todo-sample-app-fork/coverage/lcov-report/index.html'"
    },
    "jest": {
        "coveragePathIgnorePatterns": [
            "reportWebVitals.js",
